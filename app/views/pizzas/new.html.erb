<h1>New pizza</h1>

<% form_for(@pizza) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :kosher %><br />
    <%= f.check_box :kosher %>
  </p>
  <p>
    <%= f.label :slices %><br />
    <%= f.text_field :slices %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', pizzas_path %>